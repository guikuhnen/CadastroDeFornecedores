@model CadastroDeFornecedores.Domain.Models.Fornecedor

@{
    ViewData["Title"] = "Remover Fornecedor";
}

<h1>Remover Fornecedor</h1>

<h3>Tem certeza que deseja remover este Fornecedor?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            CPF ou CNPJ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPFouCNPJ)
        </dd>
        <dt class="col-sm-2">
            Data de Cadastro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataHoraCadastro)
        </dd>
        <dt class="col-sm-2">
            Telefones
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.Telefones.Count; i++)
            {
                if (i.Equals(Model.Telefones.Count - 1))
                    @Html.DisplayFor(model => model.Telefones[i].Numero)
                else
                {
                    string texto = Model.Telefones[i].Numero + " | ";
                    @Html.DisplayFor(model => texto)
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empresa.NomeFantasia)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Remover" class="btn btn-danger" />
        </div>
    </form>
</div>

<div class="border-top">
    <a asp-action="Index">Voltar para lista</a>
</div>

