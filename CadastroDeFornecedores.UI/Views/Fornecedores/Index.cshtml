@model IEnumerable<CadastroDeFornecedores.Domain.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPFouCNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistroGeralPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAniversarioPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPFouCNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistroGeralPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAniversarioPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
